{
  "name": "kasperhansen/dot-array-mapper",
  "description": "Mapping array data using dot notation.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Kasper Hansen",
      "email": "kasper.h90@gmail.com"
    }
  ],
  "keywords": [
    "array",
    "mapper",
    "dot notation"
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Kasperhansen\\DotArrayMapper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kasperhansen\\DotArrayMapper\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.84"
  },
  "scripts": {
    "analyse": "phpstan",
    "coverage": "XDEBUG_MODE=coverage phpunit --configuration=./phpunit.xml --coverage-html ./tests/coverage",
    "fix": "php-cs-fixer fix",
    "test": "phpunit"
  }
}
